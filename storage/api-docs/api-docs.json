{
    "openapi": "3.0.0",
    "info": {
        "title": "jobinhood.co.uk API",
        "description": "",
        "version": ""
    },
    "paths": {
        "/api/user/login": {
            "post": {
                "summary": "Login the user",
                "operationId": "App\\Http\\Controllers\\Auth\\LoginController::apiLogin",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    },
                                    "device_name": {
                                        "type": "string"
                                    }
                                },
                                "type": "object",
                                "example": {
                                    "email": "john@doe.com",
                                    "password": "Password",
                                    "device_name": "DeviceX"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Token Issued"
                    },
                    "422": {
                        "description": "Unprocessable Entity"
                    }
                }
            }
        },
        "/api/user/logout": {
            "post": {
                "summary": "Logout the user",
                "description": "Use with bearer token",
                "operationId": "App\\Http\\Controllers\\Auth\\LoginController::apiLogout",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "device_name": {
                                        "type": "string"
                                    }
                                },
                                "type": "object",
                                "example": {
                                    "device_name": "DeviceX"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Token Revoked"
                    },
                    "422": {
                        "description": "Unprocessable Entity"
                    }
                }
            }
        },
        "/api/user": {
            "get": {
                "summary": "Get current user basic info",
                "description": "Use with bearer token",
                "operationId": "App\\Http\\Controllers\\Auth\\LoginController::apiGetCurrentUser",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {}
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "User details returned"
                    },
                    "422": {
                        "description": "Unprocessable Entity"
                    }
                }
            }
        },
        "/api/user/register": {
            "post": {
                "summary": "Adds a new user",
                "operationId": "App\\Http\\Controllers\\Auth\\RegisterController::register",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "email": {
                                        "type": "string"
                                    },
                                    "name": {
                                        "type": "string"
                                    },
                                    "password": {
                                        "type": "string"
                                    }
                                },
                                "type": "object",
                                "example": {
                                    "email": "john@doe.com",
                                    "name": "John Doe",
                                    "password": "Password"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "422": {
                        "description": "Unprocessable Entity"
                    }
                }
            }
        },
        "/api/company": {
            "put": {
                "summary": "Create a new company",
                "operationId": "App\\Http\\Controllers\\CompanyController::store",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "description": {
                                        "type": "string"
                                    },
                                    "website": {
                                        "type": "string"
                                    },
                                    "email": {
                                        "type": "string"
                                    },
                                    "industry_id": {
                                        "type": "integer"
                                    }
                                },
                                "type": "object",
                                "example": {
                                    "name": "Jobinhood",
                                    "description": "Very good company",
                                    "website": "www.jobinhood.co.uk",
                                    "email": "test@jobinhood.co.uk",
                                    "industry_id": 1
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    },
                    "422": {
                        "description": "Unprocessable Entity"
                    }
                },
                "security": [
                    {
                        "api_key": []
                    }
                ]
            }
        },
        "/api/company/{companyId}": {
            "get": {
                "summary": "Show company details by ID",
                "operationId": "App\\Http\\Controllers\\CompanyController::show",
                "parameters": [
                    {
                        "name": "companyId",
                        "in": "path",
                        "description": "ID of company to return",
                        "required": true,
                        "schema": {
                            "type": "integer",
                            "format": "int64"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {}
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful"
                    },
                    "404": {
                        "description": "Item not found"
                    },
                    "422": {
                        "description": "Unprocessable Entity"
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearerAuth": {
                "type": "http",
                "bearerFormat": "sanctum",
                "scheme": "bearer"
            }
        }
    },
    "security": [
        []
    ]
}